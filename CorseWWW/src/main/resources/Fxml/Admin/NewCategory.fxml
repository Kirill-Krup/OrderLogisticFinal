<DialogPane prefHeight="318.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.courcach.corsewww.Controllers.Admin.NewCategoryController">
   <content>
      <StackPane>
         <ImageView fitHeight="300.0" fitWidth="400.0" preserveRatio="false">
            <image>
               <Image url="@../../Images/background.jpg" />
            </image>
         </ImageView>
         <VBox alignment="CENTER" prefHeight="346.0" prefWidth="425.0" spacing="20" style="-fx-background-color: rgba(0,0,0,0.5); -fx-padding: 30;">
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Добавьте новую категорию">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <TextField fx:id="addNewCategoryField" prefHeight="35.0" prefWidth="250.0" promptText="Введите новую категорию" />
            <HBox alignment="CENTER" spacing="20">
               <Button fx:id="exitButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Выход" />
               <Button fx:id="addButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Добавить" />
            </HBox>
            <Text fx:id="errorLabel" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="334.3999283313751" />
         </VBox>
      </StackPane>
   </content>
</DialogPane>
